<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>CRUD Nodejs y MongoDb</title>
    <!-- BOOTSTRAP CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark mb-4">
      <a class="navbar-brand" href="#">Dashboard</a>
      <p style="color:white"> Welcome <%= user.name %></p>
      <a style="color:white" href="/users/logout">Logout</a>
    </nav>
  <style>
      .card {
     background-color: rgba(242, 243, 248, 0.906);
      }
      .form {text-align:left;}
  </style>
<div class="container-fluid">

  <div class="row">
    <!--FORM-->
    <div class="col-md-4">
        <br><br>
      <div class="card">
        <div class="card-body">
          <form action="/dashboard/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Nombre" >
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="ciclo"  placeholder="Agregar ciclo">
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="nota"  placeholder="Agregar nota">
            </div>
            <div class="form-group">
              <textarea class="form-control"  name="observacion" cols="80"  placeholder="Agregar observación"></textarea>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="descripcion" cols="80" placeholder="Agregar descripción"></textarea>
            </div>
            <button class="btn btn-primary" type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>
  
    <!-- LIST -->
    <div class="col-md-8">
    
      <table class="table table-striped">
        <h3 class="d-flex justify-content-center">Tabla de Cursos</h3>
        <thead>
          <tr>
            <th>N°</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Ciclo</th>
            <th>Nota</th>
            <th>Observación</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < tasks.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= tasks[i].nombre %></strong></td>
              <td><%= tasks[i].descripcion %></td>
              <td><%= tasks[i].ciclo %></td>
              <td><%= tasks[i].nota %></td>
              <td><%= tasks[i].observacion %></td>
              <td>
                <a
                  class="<%= tasks[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                  href="/dashboard/turn/<%= tasks[i]._id %>">Done</a>
                <a href="/dashboard/delete/<%= tasks[i]._id %>"
                  class="btn btn-danger">
                  Delete
                </a>
                <a href="/dashboard/edit/<%= tasks[i]._id %>" class="btn btn-info">
                  Edit
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>
</body>
</html>
